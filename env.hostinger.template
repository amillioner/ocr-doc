# Hostinger Deployment Environment Variables
# Copy this file to .env on your Hostinger server and fill in your values
# Command: cp env.hostinger.template .env

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# Google Gemini Configuration (Primary OCR)
# Use one of these: GEMINI_API_KEY, OPENAI_API_KEY, or VITE_GEMINI_API_KEY
GEMINI_API_KEY=your_gemini_api_key_here

# PaddleOCR Configuration
USE_GPU=False
OCR_LANG=en

# API Configuration
API_HOST=0.0.0.0
API_PORT=8050
PORT=8050

# CORS Configuration
# Update with your frontend domain(s) - separate multiple domains with commas
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration (in bytes)
# 10485760 = 10MB
MAX_FILE_SIZE=10485760

